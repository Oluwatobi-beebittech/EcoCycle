{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
        "@API": ["api/"],
        "@Components": ["components/"],
        "@Dto": ["dto/"],
        "@Pages": ["pages/"],
        "@Providers": ["providers/"],
        "@Utilities": ["utilities/"],
        "@Store": ["store/"],
        "@Styles": ["styles/"],
        "@Hooks": ["hooks/"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
